<div class="container py-5 bg-notion text-notion-dark">
  <h1 class="mb-4 text-center fw-bold">All Flaterinos</h1>
  <div class="text-center mb-4">
    <%= link_to 'Add a New Flat', new_flat_path, class: 'btn btn-notion-accent btn-lg' %>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card bg-notion-card text-notion-dark shadow-sm">
          <% if flat.photo.attached? %>
            <%= cl_image_tag flat.photo.key, class: 'card-img-top img-fluid rounded-3', style: 'height: 200px; object-fit: cover;' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title fw-bold"><%= flat.title %></h5>
            <p class="card-text">
              <strong>Price:</strong> <%= number_to_currency(flat.price, unit: "â‚¬") %><br>
              <strong>Rooms:</strong> <%= flat.rooms %><br>
              <strong>Address:</strong> <%= flat.adress %>
            </p>
            <div class="text-center mt-3">
              <%= link_to 'Show', flat_path(flat), class: 'btn btn-notion w-100' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
