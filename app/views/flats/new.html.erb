<h1>Create a New Flat</h1>
<%= form_with model: @flat, local: true do |f| %>
  <%= f.file_field :photo %>
  <div class="form-group">
    <%= f.label :title, "Flat Title" %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Enter the title of the flat' %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Price (in â‚¬)" %>
    <%= f.number_field :price, class: 'form-control', placeholder: 'Enter the price' %>
  </div>
  <div class="form-group">
    <%= f.label :rooms, "Number of Rooms" %>
    <%= f.number_field :rooms, class: 'form-control', placeholder: 'Enter the number of rooms' %>
  </div>
  <div class="form-group">
    <%= f.label :adress, "Address" %>
    <%= f.text_field :adress, class: 'form-control', placeholder: 'Enter the address' %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Describe the flat', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Flat", class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'Back to All Flats', flats_path, class: 'btn btn-secondary' %>
